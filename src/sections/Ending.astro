---
import { Image } from "astro:assets";
import ThatsAllFolksImage from "../assets/images/thats_all_folks.png";
---

<section class="flex h-screen items-center justify-center px-8 py-8 pb-6 pt-8">
  <div class="flex h-full items-center justify-center">
    <Image
      class="h-full max-h-96 w-full max-w-96 object-contain"
      src={ThatsAllFolksImage}
      alt="thats-all-folks"
      quality="high"
    />
  </div>
</section>

<style>
  @keyframes grow {
    from {
      scale: 0;
    }
  }

  img {
    animation: grow linear both;
    animation-timeline: view();
    animation-range: 0% 50%;
  }
</style>
