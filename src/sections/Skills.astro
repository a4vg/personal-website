---
import WaveShape from "../assets/shapes/wave.svg?raw";
import skills from "../data/skills";
---

<div class="absolute -ml-[15%] w-[115%] -translate-y-full text-main-white">
  <Fragment set:html={WaveShape} />
</div>
<section>
  <div class="relative max-w-screen-2xl px-8 pb-8 2xl:mx-auto">
    <h2 class="mb-3 mt-6 text-3xl font-bold text-main-red">Skills</h2>
    <p class="mb-5 text-lg">
      A non-exhaustive list of the tools I've learned along the way. It keeps
      growing!
    </p>

    <div class="flex flex-wrap justify-center gap-11 gap-y-10">
      <!-- Programming Languages -->
      <div class="flex w-[250px] flex-col items-center gap-2">
        <!-- Title -->
        <h3 class="text-lg font-bold text-main-red">Programming Languages</h3>
        <!-- Dialog shape with content -->
        <div class="relative mb-11">
          <div
            class="bg-main-gray flex flex-wrap justify-between gap-6 gap-y-6 rounded-md px-6 py-8"
          >
            {
              skills.languages.map(language => (
                <div class="flex w-1/4 flex-col items-center">
                  <img
                    class="h-11 w-11 object-scale-down"
                    src={language.icon.src}
                    alt={language.name}
                    width="44"
                    height="44"
                  />
                  <span class="mt-1 text-sm">{language.name}</span>
                </div>
              ))
            }
          </div>
          <div
            class="bg-main-gray absolute top-[80%] -z-10 ml-9 h-[100px] w-1/3 rotate-[60deg] rounded"
          >
          </div>
        </div>
      </div>

      <!-- Databases -->
      <div class="flex w-[300px] flex-col items-center gap-2">
        <!-- Title -->
        <h3 class="text-lg font-bold text-main-red">Databases</h3>
        <!-- Database shape -->
        <div class="flex w-full flex-col gap-y-2">
          <div
            class="bg-main-gray relative flex flex-col items-center rounded-lg px-4 py-3"
          >
            <div class="absolute right-6 flex gap-1">
              {
                new Array(3)
                  .fill(0)
                  .map(() => (
                    <div class="h-4 w-4 rounded bg-black opacity-15" />
                  ))
              }
            </div>
            <h4 class="mb-4 text-sm font-bold">Relational</h4>
            <div class="flex gap-6">
              {
                skills.databases.relational.map(db => (
                  <div class="flex flex-col items-center">
                    <img
                      class="h-11 w-11 object-scale-down"
                      src={db.icon.src}
                      alt={db.name}
                      width="44"
                      height="44"
                    />
                    <span class="mt-1 text-sm">{db.name}</span>
                  </div>
                ))
              }
            </div>
          </div>
          <div
            class="bg-main-gray flex flex-col items-center rounded-lg px-4 py-3"
          >
            <h4 class="mb-4 text-sm font-bold">Non-relational</h4>
            <div class="flex gap-6">
              {
                skills.databases.nonRelational.map(db => (
                  <div class="flex flex-col items-center">
                    <img
                      class="h-11 w-11 object-scale-down"
                      src={db.icon.src}
                      alt={db.name}
                      width="44"
                      height="44"
                    />
                    <span class="mt-1 text-sm">{db.name}</span>
                  </div>
                ))
              }
            </div>
          </div>
          <div
            class="bg-main-gray flex flex-col items-center rounded-lg px-4 py-3"
          >
            <h4 class="mb-4 text-sm font-bold">Warehouse</h4>
            <div class="flex gap-6">
              {
                skills.databases.warehouse.map(db => (
                  <div class="flex flex-col items-center">
                    <img
                      class="h-11 w-11 object-scale-down"
                      src={db.icon.src}
                      alt={db.name}
                      width="44"
                      height="44"
                    />
                    <span class="mt-1 text-sm">{db.name}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <!-- Libraries and Frameworks -->
      <div class="flex flex-col items-center gap-2">
        <!-- Title -->
        <h3 class="text-lg font-bold text-main-red">Frameworks & Libraries</h3>
        <!-- Library shape -->
        <div class="flex w-[400px] flex-col items-center">
          <div
            class="bg-main-gray -mb-40 h-60 w-full [clip-path:_polygon(50%_0%,0_36%,100%_36%)]"
          >
          </div>
          <div
            class="bg-main-gray flex w-5/6 flex-wrap justify-center gap-4 gap-y-5 px-4 py-6"
          >
            {
              skills.librariesAndFrameworks.map(lib => (
                <div class="flex w-1/5 flex-col items-center text-center">
                  <img
                    class="h-11 w-11 object-scale-down"
                    src={lib.icon.src}
                    alt={lib.name}
                    width="44"
                    height="44"
                  />
                  <span class="mt-1 text-sm">{lib.name}</span>
                </div>
              ))
            }
          </div>
          <div class="bg-main-gray h-7 w-full rounded"></div>
        </div>
      </div>

      <!-- Cloud -->
      <div class="flex flex-col items-center gap-2">
        <!-- Title -->
        <h3 class="text-lg font-bold text-main-red">Cloud</h3>
        <!-- Cloud shape -->
        <div class="flex w-[250px] flex-col items-center">
          <div class="-mb-12 flex items-end">
            <div class="bg-main-gray -mr-5 h-24 w-24 rounded-full"></div>
            <div class="bg-main-gray h-20 w-20 rounded-full"></div>
          </div>
          <div
            class="bg-main-gray flex w-full flex-wrap justify-center gap-y-5 rounded-full py-2"
          >
            {
              skills.cloud.map(lib => (
                <div class="flex w-1/3 flex-col items-center text-center">
                  <img
                    class="h-11 w-11 object-scale-down"
                    src={lib.icon.src}
                    alt={lib.name}
                    width="44"
                    height="44"
                  />
                  <span class="mt-1 text-sm">{lib.name}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- CI/CD -->
      <div class="flex flex-col items-center gap-2">
        <!-- Title -->
        <h3 class="text-lg font-bold text-main-red">CI/CD</h3>
        <!-- CI/CD shape -->
        <div class="relative flex items-center py-4">
          <div class="bg-main-gray absolute inset-y-0 left-0 w-6"></div>
          <div
            class="bg-main-gray flex w-full flex-wrap justify-center gap-y-5 px-4 py-4"
          >
            {
              skills.cicd.map(pip => (
                <div class="flex w-1/3 flex-col items-center text-center">
                  <img
                    class="h-11 w-11 object-scale-down"
                    src={pip.icon.src}
                    alt={pip.name}
                    width="44"
                    height="44"
                  />
                  <span class="mt-1 text-sm">{pip.name}</span>
                </div>
              ))
            }
          </div>
          <div class="bg-main-gray absolute inset-y-0 right-0 w-6"></div>
        </div>
      </div>

      <!-- Others -->
      <div class="flex flex-grow-0 flex-col items-center gap-2">
        <!-- Title -->
        <h3 class="text-lg font-bold text-main-red">Others</h3>
        <!-- Others shape -->
        <div class="bg-main-gray flex items-center gap-1 rounded px-4 py-4">
          {
            skills.others.map(ot => (
              <div class="flex w-1/3 flex-col items-center text-center">
                <img
                  class="h-11 w-11 object-scale-down"
                  src={ot.icon.src}
                  alt={ot.name}
                  width="44"
                  height="44"
                />
                <span class="mt-1 text-sm">{ot.name}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
