---
import "@fontsource-variable/roboto-flex";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="overflow-x-clip">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Hi, I'm Andrea, a Software Engineer and this is my personal website."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline src="/polyfills/scroll-timeline.js"></script>
    <title>{title}</title>
  </head>
  <body class="overflow-x-clip bg-main-white">
    <slot />
  </body>
</html>
